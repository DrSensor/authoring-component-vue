{
  "name": "{{name}}",
  "version": "0.1.0",
  "description": "{{description}}",
  "homepage": "http://{{name}}.surge.sh",
  "keyword": [
    "vue",
    "component"
  ],
  "main": "dist/{{name}}.js",
  "files": [
    "dist/",
    "umd/",
    "src/components/"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "poi --config .storybook/poi.config.js --storybook --open",
    "build:storybook": "poi build --config .storybook/poi.config.js --storybook",
    "build:component": "poi build src/components/{{pascalCase name}}.vue --library",
    "build:component:umd": "poi build src/components/{{pascalCase name}}.vue --library {{pascalCase name}} --dist umd",
    "deploy": "surge .storybook/dist"
  },
  "devDependencies": {
{{#isEnabled addons 'actions'}}    
    "@storybook/addon-actions": "^3.3.0",
{{/isEnabled}}
{{#isEnabled addons 'info'}}
    "@storybook/addon-info": "^3.3.0",
{{/isEnabled}}
{{#isEnabled addons 'knobs'}}
    "@storybook/addon-knobs": "^3.3.0",
{{/isEnabled}}
{{#isEnabled addons 'notes'}}
    "@storybook/addon-notes": "^3.3.0",
{{/isEnabled}}
{{#isEnabled addons 'readme'}}
    "storybook-readme": "^3.1.0",
{{/isEnabled}}
    "@storybook/addon-options": "^3.3.0",
    "@storybook/vue": "^3.3.0",
    "marked": "^0.3.0",
    "poi": "^9.4.0",
    "poi-preset-resolve-alias": "^1.0.0",
    "poi-preset-storybook": "^0.1.0",
    "html-loader": "^0.5.0",
    "markdown-loader": "^2.0.0",
    "surge": "^0.19.0"
  },
  "peerDependencies": {},
  "dependencies": {}
}
